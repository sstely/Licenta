@page "/"
@model Licenta.Pages.Dishes.IndexModel

@{
    ViewData["Title"] = "Preparate";
}

<h1>Preparate</h1>

<p>
    <a asp-page="Create">Adauga preparat</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Imagine</th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].DishIngredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].DishAllergens)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].ServingRecommendation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DishD.Dishes) {

            string selectedRow = "";
            if(item.ID == Model.DishID)
            {
                selectedRow = "table-success";
            }

        <tr class="@selectedRow">
            <td>
                <img src="@item.CoverImageURL" class="img-thumbnail"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                    @{
                        foreach(var ingr in item.DishIngredients)
                        {
                            @ingr.Ingredient.ID @:  @ingr.Ingredient.IngredientName <br/>
                        }
                    }
            </td>
            <td>
                    @{
                        foreach(var alg in item.DishAllergens)
                        {
                            @alg.Allergen.ID @:  @alg.Allergen.AllergenName <br/>
                        }
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServingRecommendation)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editeaza</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalii</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Sterge</a>
            </td>
        </tr>
}
    </tbody>
</table>
