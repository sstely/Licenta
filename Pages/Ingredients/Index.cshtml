@page
@model Licenta.Pages.Ingredients.IndexModel

@{
    ViewData["Title"] = "Ingrediente";
}

<h1>Ingrediente</h1>

<p>
    <a asp-page="Create">Adauga ingredient</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].IngredientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].IngredientPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].IngredientPresentation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].SaturatedFats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].UnsaturatedFats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Sugars)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Proteins)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Salt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Fibers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ingredient) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientPresentation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaturatedFats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnsaturatedFats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sugars)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proteins)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fibers)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editeaza</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalii</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Sterge</a>
            </td>
        </tr>
}
    </tbody>
</table>
